# Example .env file for Trex-Project
# SECRET_KEY: generate a secure random value for production
SECRET_KEY=change_me_to_a_long_random_value

# DEBUG: True for local dev, False for production
DEBUG=True

# Comma-separated hosts for production (e.g. example.com,www.example.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=trex
DB_USER=root
DB_PASSWORD=root
DB_HOST=localhost
DB_PORT=3306

# CORS (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=False

# API key for internal service-to-service calls (if used)
INTERNAL_API_KEY=replace_with_secure_key
INTERNAL_API_PATH_PREFIX=/internal-api/

# If app is behind a proxy which sets X-Forwarded-Proto, set like:
# SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SECURE_PROXY_SSL_HEADER=
